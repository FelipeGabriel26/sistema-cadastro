{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask (Rodar Sistema)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "8080"
            ],
            "jinja": true,
            "autoStartBrowser": true
        }
    ]
}